@model GameFormModel
@using static RetroWars.Common.GeneralApplicationConstants.GameFormPartialModes

@{
    string buttonName = ViewData["Action"] == DeleteMode ? "Delete" : "Save";
    bool isDisabled = ViewData["Action"] == DeleteMode;
    string smartText = ViewData["Action"] == DeleteMode ? "Please review before deletion" : "Please enter correct information";
}
<form method="post" class="vh-100 " enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">


                            <h3 class="text-white-50 mb-5">@smartText</h3>

                            <div class="form-outline form-white mb-4">
                                <input asp-for="Name" type="text" class="form-control form-control-lg" disabled="@isDisabled" />
                                <label asp-for="Name" class="form-label" for="typeNameX">Title</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input asp-for="Developer" type="text" class="form-control form-control-lg" disabled="@isDisabled" />
                                <label asp-for="Developer" class="form-label">Developer</label>
                                <span asp-validation-for="Developer" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <select asp-for="GenreId" class="form-select mt-3" required disabled="@isDisabled">
                                    @foreach (var genre in Model.Genres)
                                    {
                                        @if (Model.GenreId == genre.Id)
                                        {
                                            <option value="@genre.Id" selected="selected">@genre.Name</option>
                                        }
                                        else
                                        {
                                        <option value="@genre.Id">@genre.Name</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input asp-for="Publisher" type="text" id="typeNameX" class="form-control form-control-lg" disabled="@isDisabled" />
                                <label asp-for="Publisher" class="form-label" for="typeNameX">Publisher</label>
                                <span asp-validation-for="Publisher" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <select asp-for="PlatformId" class="form-select mt-3" required disabled="@isDisabled">
                                    @foreach (var platform in Model.Platforms)
                                    {
                                        @if (Model.PlatformId == platform.Id)
                                        {
                                            <option value="@platform.Id" selected="selected">@platform.Name</option>
                                        }
                                        else
                                        {
                                        <option value="@platform.Id">@platform.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            @if (ViewData["Action"] == AddMode)
                            {
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="File" type="file" id="typeNameX" class="form-control form-control-lg"/>
                                    <label asp-for="File" class="form-label" for="typeNameX">Image</label>
                                    <span asp-validation-for="File" class="text-danger"></span>

                                </div>
                            }

                            <div class="form-outline form-white mb-4">
                                <input asp-for="YearOfPublishing" type="number" id="typeNameX" class="form-control form-control-lg" disabled="@isDisabled" />
                                <label asp-for="YearOfPublishing" class="form-label" for="typeNameX">Year of publishing</label>
                                <span asp-validation-for="YearOfPublishing" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <textarea asp-for="Description" id="typePasswordX" class="form-control form-control-lg" disabled="@isDisabled"></textarea>
                                <label asp-for="Description" class="form-label" for="typePasswordX">Description</label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>



                            <button type="submit" class="btn btn-outline-light btn-lg px-5" type="submit">@buttonName</button>

                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
