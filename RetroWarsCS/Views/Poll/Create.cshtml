@model PollFormModel
@{
    ViewData["Title"] = "Create Poll page";
}

<form method="post" class="vh-100 ">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            
                            <h3 class="text-white-50 mb-5">War.. war never changes..</h3>
                            
                            <div class="form-outline form-white mb-4">
                                <select asp-for="FirstGameId" class="form-select mt-3" required>
                                    @foreach (var genre in Model.Games)
                                    {
                                        <option value="@genre.Id">@genre.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <select asp-for="SecondGameId" class="form-select mt-3" required>
                                    @foreach (var genre in Model.Games)
                                    {
                                        <option value="@genre.Id">@genre.Name</option>
                                    }
                                </select>
                            </div>

                            <button type="submit" class="btn btn-outline-light btn-lg px-5" type="submit">Create Poll</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}