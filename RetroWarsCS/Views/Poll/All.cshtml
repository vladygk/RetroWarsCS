@model             IEnumerable<RetroWars.Web.ViewModels.Poll.PollViewModel>
@{
    ViewData["Title"] = "All Polls";
}


<div class="container mx-auto mt-4">
    

        @if (Model.Any())
        {
            @foreach (RetroWars.Web.ViewModels.Poll.PollViewModel viewModel in Model)
            {
            <div class="row mb-5">
                    @await Html.PartialAsync("_PollCardPartial", viewModel)
                </div>
            }
        }
        else
        {
            <h5>No polls added to RetroWars.</h5>
        }


    
</div>
